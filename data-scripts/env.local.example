# Application Configuration
NEXT_PUBLIC_APP_NAME=neo4j-communication
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Neo4j Database Connections
# Database 1 - matching docker-compose.yml configuration
NEO4J_01_URI=bolt://localhost:7687
NEO4J_01_USER=neo4j
NEO4J_01_PASSWORD=changeme123

# Authentication (REQUIRED)
# Generate a secure secret with: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-your-own-secret-with-openssl-rand-base64-32

# Demo User Credentials (for development/testing)
# Default login: demo@example.com / demo123
DEMO_USER_EMAIL=demo@example.com
DEMO_USER_NAME=Demo User
# Generate with: npx bcrypt password 10
DEMO_USER_PASSWORD_HASH=$2a$10$K.0HY2ycGOOF2bEc3kKnGeQsLmRQNxUkroZvJps1b3HPRhghvNKGy

# Feature Flags
NEXT_PUBLIC_ENABLE_DARK_MODE=true
